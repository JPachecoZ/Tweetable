<div id="<%= dom_id tweet %>">
  <div class="tweet">
    <div class="flex">
      <%= image_tag tweet.user.avatar, class: "tweet-img" if tweet.user.avatar.attached?%>
      <div class="flex flex-column">
        <div class="flex">
          <p><%= tweet.user.name %></p>
          <p class = "tweet-username">@<%= tweet.user.username%></p>
        </div>
        <p><%= time_ago_in_words(tweet.created_at)%></p>
      </div>
    </div>
    <p>          
      <%= tweet.body %>
    </p>
    <div class="tweet-footer">
      <p>
        <i class="far fa-comment-dots"></i>
        <%= tweet.replies_count %>
      </p>    
      <p>
        <i class="<%= class_names(liked: (tweet.liked_users.include? 1), far: true, "fa-heart": true) %>"></i>
        <%= tweet.liked_users.length %>
      </p>
    </div>
  </div>
</div>
